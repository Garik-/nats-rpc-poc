{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "lib": [
        "es2019"
      ],
      "declaration": true,
      "sourceMap": true,
      "outDir": "./lib/",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": [
      "./src/**/*",
    ],
    "exclude": [
      "./src/tests/**/*"
    ]
  }